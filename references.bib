doi = {10.1073/pnas.1524136113},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {22},
pages = {6125--6130},
pmid = {27185928},
title = {{Isoprene photochemistry over the Amazon rainforest}},
url = {http://www.pnas.org/content/113/22/6125.abstract},
