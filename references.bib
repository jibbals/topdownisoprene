doi = {10.1029/2005JD006689},
file = {:home/jesse/Documents/Papers_Mendeley/Palmer et al._2006_Quantifying the seasonal and interannual variability of North American isoprene emissions using satellite observation.pdf:pdf},
isbn = {2169-897X},
issn = {0148-0227},
journal = {J.Geophys.Res.},
keywords = {0315 Atmospheric Composition and Structure: Biosph,0322 Atmospheric Composition and Structure: Consti,0345 Atmospheric Composition and Structure: Pollut,0365 Atmospheric Composition and Structure: Tropos,0368 Atmospheric Composition and Structure: Tropos,formaldehyde,isoprene,satellite data},
